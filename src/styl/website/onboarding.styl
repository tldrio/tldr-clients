@import 'nib'

#onboarding
  display none
  .tldr-summary
    margin-top 25px
  .install-bm-container
    padding-left 20px

#onboarding-content
  background-color #ffffff
  margin 200px auto 0px auto
  width 550px
  border none
  border-radius 4px
  box-shadow 0px 0px 0px 4px #666
  padding 15px

#onboarding-overlay
  width 100%
  height 100%
  fixed top left
  background-color rgba(0,0,0,0.8)
  transition: background-color 0.2s ease-in;
  z-index 200000

#onboarding-wrapper
  height 500px
  width 1100px
  margin-left -550px
  left 50%
  position absolute

#onboarding-close
  z-index: 100004;
  background: transparent url(/assets/img/close.png) 0 0 no-repeat;
  height: 48px;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 183px;
  right: 229px;
  width: 48px;

#onboarding-close-btn
  background: none;
  border: none;
  box-shadow: none;
  cursor: pointer;
  height: 30px;
  margin: 6px 0 0 9px;
  padding: 0;
  width: 30px;
  text-indent: -9000px;
  content: "close"

#onboarding-show-me-how
  text-align center
  margin-top 30px

.onboarding-numbering
  float right

.onboarding-signup
  margin-top 6px
  margin-bottom 9px


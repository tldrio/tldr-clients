@import 'nib'

.voting
  float left

.right-of-voting
  position relative
  left 15px
  top -5px
  margin-left 26px

.post-thread-metadata {
  color #777777
  font-style: italic
}

.thread-in-list {
  font-weight bold
  font-size 18px
}

.thread-title
  font-size 30px
  font-weight bold
  margin-bottom -20px

.centered-block
  margin-left auto
  margin-right auto
  width 80%

.list-box
  background-color #f5f5f5;
  padding 20px
  border-color #dcdcdc
  border-style solid
  border-width 1px

.post-input
  resize none
  display block
  width 100%
  margin 0
  padding-right 0
  padding-left 0


.thread-separator {
  margin 5px 20px 20px 20px
  height 2px
  border-bottom 1px solid gainsboro
}

.thread-separator:last-child {
  display none
}

.votes-count {
  font-weight bolder
  font-style italic
  color #666666
}

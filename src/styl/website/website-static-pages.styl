.users-quotes
  .right-col
    margin-top 33px
  .quote-embed
    text-align: left;
    width: 411px;
    border-radius: 4px;
    padding: 29px 18px 29px 27px;
    margin-bottom: 40px;
    background: #fafafa;
    position: relative;
    box-shadow: inset 0 1px #fff,0 1px 2px #ccc;
    -webkit-filter: drop-shadow(0 1px 4px rgba(0,0,0,0.3));
    border none
    &:nth-of-type(2)
      margin-top 67px
      margin-left 27px
    &:after
      content: "";
      position: absolute;
      bottom: -19px;
      left: 50px;
      border-width: 20px 0 0 20px;
      border-style: solid;
      border-color: #fafafa transparent;
      display: block;
      width: 0;
    .quote-avatar
      width 85px
      height 85px
      border-radius 5px
      margin-right 18px
    .quote-text
      display inline-block
      width 300px
      vertical-align middle
      p
        font-size 18px
    small
      color #999





@import 'nib'

/* Sharing
-------------------------------------------------- */

.sharing-container
  display inline-block
  .btn
    padding 4px 4px
  .btn.btn-link.thank.muted
    color #999
    &:hover
      text-decoration none
      cursor default
  ul
    &.dropdown-menu
      margin-bottom 0px
    left -134px
    padding: 9px 10px 7px 13px;
    input
      width auto
      display inline
      margin 1px 6px 3px 2px

a.tldr-btn-share, .dropdown-menu li > a.tldr-btn-share
  display inline-block
  padding 0

.fc-webicon.instapaper, .fc-webicon.pocket
  margin-right 10px
  &:hover
    margin -1px 10px 1px 0px

.dropup:hover ul.dropdown-menu
  display block


/* FC Webicons by Fairhead Creative http://fairheadcreative.com */

.fc-webicon { display: inline-block; background-size: 100%; width: 30px; height: 30px; text-indent: -999em; text-align: left; -moz-box-shadow: 0 1px 0 rgba(0, 0, 0, 0.5); -webkit-box-shadow: 0 1px 0 rgba(0, 0, 0, 0.5); box-shadow: 0 1px 0 rgba(0, 0, 0, 0.5); -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; margin-bottom: 5px; }
.fc-webicon:hover { margin: -1px 0 1px; -moz-box-shadow: 0 2px 0 rgba(0, 0, 0, 0.25); -webkit-box-shadow: 0 2px 0 rgba(0, 0, 0, 0.25); box-shadow: 0 2px 0 rgba(0, 0, 0, 0.25); }
.fc-webicon.small { width: 20px; height: 20px; -moz-border-radius: 3px; -webkit-border-radius: 3px; border-radius: 3px; }
.fc-webicon.large { width: 43px; height: 43px; -moz-border-radius: 6px; -webkit-border-radius: 6px; border-radius: 6px; }


@import 'nib'
@import 'bootstrap.min.css'

body {
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

.settings
  max-width: 500px;
  padding: 19px 29px 29px;
  margin: 0 auto 20px;
  background-color: #fff;
  border: 1px solid #e5e5e5;
  -webkit-border-radius: 5px;
  -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
  .settings-heading
    margin-bottom: 10px;
  #textarea-excluded-urls
    width: 350px;
    float: left;
  .help
    margin-left: 375px;
    font-size: 12px;
  .row
    margin-bottom: 10px;
    margin-left: 0px;
  .alert-success
    display: none;

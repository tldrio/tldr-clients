@import 'nib'

body
  margin 0px
  background white
  padding 0px 20px
  &:hover
    .tldr-read-container
      .embed-actions
        opacity 1
        .dropup
          opacity 1
  .tldr-read-container
    padding-top 20px
    font-family Verdana
    font-size 12px
    .embed-actions
      margin 10px auto
      width 130px
      font-size 9px
      font-weight normal
      opacity 0
      .dropup
        opacity 0
      .embed-code-info
        color black
        text-align center
    .tldr-header
      color #828282
      font-size 11px
      .tldr-title
        font-weight bold
    a
      color #828282
      text-decoration none
      &:visited
        color #828282
        text-decoration none
      &:hover
        color #555
        text-decoration underline
    .tldr-summary
      line-height 140%
      ul
        padding-left 10px
        margin-bottom 0px
      .tldr-bullet
        margin-top 5px
        margin-bottom 10px
        margin-left 0px
        list-style none
        &:last-child
          margin-bottom 0px
        .square-bullet
          background-image url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAkAAAAJCAQAAABKmM6bAAAAAXNSR0IArs4c6QAAAAJiS0dEAP+Hj8y/AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAB3RJTUUH3QMLDiUPgAe4/AAAABl0RVh0Q29tbWVudABDcmVhdGVkIHdpdGggR0lNUFeBDhcAAAAXSURBVAjXY5T8z4AGWKTQRRiYGAaBEADQJQFG+rF+RQAAAABJRU5ErkJggg==")
          background-repeat no-repeat
          width 11px
          height 9px
          display inline-block

.dropup:hover ul.dropdown-menu
  display block


.dropup
  position relative

.dropdown-menu
  position absolute
  bottom 100%
  left -34px
  z-index 1000
  display none
  float left
  padding 3px 3px 3px 3px
  margin 0px
  list-style none
  background-color #fff
  box-shadow 2px 4px 8px rgba(0,0,0,0.5)
  border 1px solid #ccc

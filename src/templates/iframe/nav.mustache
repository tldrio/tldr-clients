<div class="row-fluid">
  <div class="span12">
    <ul class="pull-right">
      {{#username}}
      <li class="dropdown">
        <a href="#" class="nav-profile" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user"></i> {{username}}<b class="caret"></b></a>
        <ul class="dropdown-menu pull-right">
          <li><a href="{{env.websiteUrl}}/account" target="_blank">My account</a></li>
          <li class="divider"></li>
          <li><a href="#" class="nav-logout">Logout</a></li>
        </ul>
      </li>
      {{/username}}

      {{#thirdPartyCookiesEnabled}}
      {{^username}}
      <li>
        <a href="#" class="nav-login"><i class="icon-user"></i> login</a>
      </li>
      {{/username}}
      {{/thirdPartyCookiesEnabled}}

      {{^thirdPartyCookiesEnabled}}
      <a href="http://help.disqus.com/customer/portal/articles/466235-enabling-cookies">
        Please enable 3rd party cookies to log in
      </a>
      {{/thirdPartyCookiesEnabled}}


      {{#createdAt}}
      <li>
        <a href="#" class="nav-edit"><i class="icon-pencil"></i> edit</a>
      </li>
      {{#displayDeleteLink}}
        <li>
          <a href="#" class="nav-delete"><i class="icon-trash"></i> delete</a>
        </li>
      {{/displayDeleteLink}}
      {{/createdAt}}

    </ul>
  </div>
</div>

<div class="preview-container {{type}}">
  <div class="preview-heading">
    <div class="row-fluid">
      <div class="preview-title">
         {{title}}
      </div>
    </div>
    <div class="row-fluid">
      <div class="preview-date">
         {{publicationDate}}
      </div>
    </div>
  </div>
  <div class="row-fluid content">
    <img src="{{image}}">
    <div class="preview-text">
      <ul>
        {{#summaryBullets}}
        <li class="bullet">
            <i class="icon-stop"></i>
              {{.}}
          </li>
        {{/summaryBullets}}
      </ul>
    </div>
  </div>
 </div>

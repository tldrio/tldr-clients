@import 'nib'

/* Jumbotrons
-------------------------------------------------- */
.jumbotron
  margin-bottom 30px
  text-align center
  position relative
  h1
    font-size 54px
    font-weight: bold;
    letter-spacing: -1px;
    line-height 1
    margin-bottom 9px
  p
    font-weight: 300;
    font-size 30px
    line-height 36px
    margin-bottom: 30px;
  a:hover
    color: #fff;
    text-shadow: 0 0 10px rgba(255,255,255,.25);

/* Masthead
------------------------- */
.masthead {
  padding: 25px 0 0px;
  margin-bottom: 0;
}
.masthead h1 {
  font-size: 63px;
  line-height: 1;
  letter-spacing: -2px;
}
.masthead p {
  font-size: 36px;
  font-weight: 200;
  line-height: 1.25;
}

/* call to action
-------------------------------------------------- */
.call-to-action
  text-align center
  .detail-extension
    font-size: 12px;
    margin-top: 6px;
  .btn
    margin-top 50px
    padding: 8px 24px;
    font-size: 24px;
    font-weight: 700;
    color: #fff; /* redeclare to override the `.jumbotron a` */
    border: 0;
    border-radius: 6px;
    box-shadow: inset 0 1px 0 rgba(255,255,255,.1), 0 1px 5px rgba(0,0,0,.25), 0 2px 10px rgba(0,68,204,.01);
    animation blueGlow 1.5s infinite
    transition none
    &:active
      box-shadow: inset 0 2px 4px rgba(0,0,0,.1), 0 1px 0 rgba(255,255,255,.1);

.ie .call-to-action
  display none !important

.marketing-point-illustration
  text-align center
  img
    height 100px

.marketing-points
  margin-top 70px

.marketing-point
  text-align center
  .marketing-point-title
    font-size 22px
    font-weight bold
  p
    position relative
    padding 12px
    font-size 15px

.marketing-point > p::before {
  content: "";
  position: absolute;
  top: 0;
  width: 11.76471%;
  left: 44.11765%;
  border-top: 1px solid #aaa;
}


